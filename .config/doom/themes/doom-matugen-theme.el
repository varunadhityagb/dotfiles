   (base2      '("#211e24" "#2e2e2e"     "brightblack"  ))
   (base3      '("#2c292f" "#262626"     "brightblack"  ))
   (base4      '("#4a454e" "#3f3f3f"     "brightblack"  ))
   (base5      '("#958e99" "#525252"     "brightblack"  ))
   (base6      '("#cbc4cf" "#6b6b6b"     "brightblack"  ))
   (base7      '("#3b383e" "#979797"     "brightblack"  ))
   (base8      '("#e7e0e8" "#dfdfdf"     "white"        ))

   (grey       base4)
   (red        '("#ffb4ab" "#ff6655" "red"          ))
   (orange     '("#f1b7c3" "#dd8844" "brightred"    ))
   (green      '("#cec2db" "#99bb66" "green"        ))
   (teal       '("#d5bbfc" "#44b9b1" "brightgreen"  ))
   (yellow     '("#ffd9df" "#ECBE7B" "yellow"       ))
   (blue       '("#d5bbfc" "#51afef" "brightblue"   ))
   (dark-blue  '("#523c73" "#2257A0" "blue"         ))
   (magenta    '("#f1b7c3" "#c678dd" "brightmagenta"))
   (violet     '("#f1b7c3" "#a9a1e1" "magenta"      ))
